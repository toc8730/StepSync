<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE plist PUBLIC "-//Apple//DTD PLIST 1.0//EN" "http://www.apple.com/DTDs/PropertyList-1.0.dtd">
<plist version="1.0">
<dict>
  <!-- Required for sandboxed macOS apps -->
  <key>com.apple.security.app-sandbox</key>
  <true/>

  <!-- Flutter/Dart JIT in debug builds -->
  <key>com.apple.security.cs.allow-jit</key>
  <true/>

  <!-- Outbound network (Firebase, HTTP, etc.) -->
  <key>com.apple.security.network.client</key>
  <true/>

  <!-- Allow the Flutter VM Service to listen on 127.0.0.1 (fixes SocketException/OSStatus 13) -->
  <key>com.apple.security.network.server</key>
  <true/>

  <!-- Firebase Auth: store credentials in Keychain -->
  <key>keychain-access-groups</key>
  <array>
    <string>$(AppIdentifierPrefix)$(CFBundleIdentifier)</string>
  </array>
</dict>
</plist>